pipeline {
    environment {
        OUTPUT1 = "foo"
    }
    agent {
        docker { image 'eilonc285/repos-team27:team27' }
    }
    triggers {
        githubPush()
    }
    stages {
        stage('Build') {
            steps {
                sh """
                    cd BS_PM2021_TEAM_27
                    python manage.py makemigrations
                    python manage.py migrate
                """
            }
        }
        stage('Run Unit Tests') {
            steps {
                dir("BS_PM2021_TEAM_27"){
                    script{
                        try{
                            sh(returnStdout: true, script: "python manage.py test 2>&1 | xargs echo > out1.txt")
                        }finally{
                            OUTPUT1 = sh(returnStdout: true, script: "cat out1.txt")
                        }
                    }
                }
            }
        }
    }
    post{
        always{
            echo 'Sending test report email...'
            dir("BS_PM2021_TEAM_27"){
                sh """
                     python manage.py email_report -s "Tests Report" -b "${OUTPUT1}"
                """
            }
            echo 'Email sent.'
        }
    }
}