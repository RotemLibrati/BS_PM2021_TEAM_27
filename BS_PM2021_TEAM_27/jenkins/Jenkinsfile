pipeline {
    agent {
        docker {
            image 'python:3.8-buster'
        }
    }
    stages
    {
        stage('Build')
        {
            steps {
                    sh 'python --version'
            }
        }
        stage('setup')
        {
            steps
            {
                withEnv(["HOME=${env.WORKSPACE}"])
                {
                    dir('jenkins')
                    {
                        sh 'python -m pip install -r requirements.txt'
                    }
                     echo 'hello'
                }
            }
        }
        stage('Test')
        {
            none agent

            steps {
                sh 'py manage.py test'
            }
        }
    }
}